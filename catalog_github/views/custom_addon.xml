<?xml version="1.0" encoding="utf-8" ?>

<odoo>

    <record id="view_custom_addon_search" model="ir.ui.view">
        <field name="name">view.custom.addon.search.inherited</field>
        <field name="model">custom.addon</field>
        <field name="inherit_id" ref="catalog.view_custom_addon_search"/>
        <field name="arch" type="xml">
            <xpath expr="//filter[@name='officials']" position="replace">
                <separator/>
                <filter name="officials" string="Officials" domain='["|", ["author", "=", "Odoo S.A."], ["partner_id", "=", %(catalog_github.partner_odoo)d]]'/>
                <filter name="oca" string="OCA" domain='["|", ["author", "=", "OCA"], ["partner_id", "=", %(catalog_github.partner_oca)d]]'/>
            </xpath>
        </field>
    </record>

</odoo>
