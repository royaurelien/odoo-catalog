<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="addons_selection_wizard_view_form" model="ir.ui.view">
        <field name="name">addons.selection.wizard.form</field>
        <field name="model">addons.selection.wizard</field>
        <field name="arch" type="xml">
            <form string="Add to selection">
                <group>
                    <field name="selection_id" string="Name"/>
                    <field
                        name="custom_addon_ids"
                        required="1"
                        invisible="1"
                        widget="many2many_tags"/>
                </group>
                <footer>
                    <button name="validate" type="object" string="Validate" class="btn-primary"
                        attrs="{'invisible': [('selection_id', '=', False)]}"/>
                    <button string="Discard" special="cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

</odoo>
