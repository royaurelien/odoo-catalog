<?xml version="1.0" encoding="utf-8" ?>

<odoo>
    <record id="view_custom_addon_selection_search" model="ir.ui.view">
        <field name="model">custom.addon.selection</field>
        <field name="arch" type="xml">
            <search>
                <field
                    name="name"
                    string="Name or Repository"
                    filter_domain="[('name', 'ilike', self)]"
                />

                <group expand="1" string="Group By">
                    <filter
                        string="User"
                        name="user"
                        context="{'group_by' : 'user_id'}"
                    />
                    <separator/>
                </group>
                <separator/>
                <!-- <filter name="major" string="Major Version" domain="[['major','=',True]]"/> -->
                <filter string="My Selections" name="my_selections" domain="[('user_id', '=', uid)]"/>
                <separator/>
                <filter name="active" string="Archived" domain="[['active','=',False]]"/>
            </search>
        </field>
    </record>

    <record id="view_custom_addon_selection_tree" model="ir.ui.view">
        <field name="model">custom.addon.selection</field>
        <field name="arch" type="xml">
            <tree decoration-muted="custom_addon_count == 0">
                <field name="name"/>
                <field name="user_id" widget="many2one_avatar_user"/>
                <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}" optional="show"/>
                <field name="custom_addon_count" string="# Addons" sum="Sum of # Addons" optional="show"/>
                <field name="create_date" widget="datetime" optional="hide"/>
                <field name="write_date" widget="datetime" optional="hide"/>
            </tree>
        </field>
    </record>

    <record id="view_custom_addon_selection_form" model="ir.ui.view">
        <field name="model">custom.addon.selection</field>
        <field name="arch" type="xml">
            <form>
                <!-- <header>
                    <button
                        name="action_sync"
                        type="object"
                        string="Addons Sync."
                        class="btn-primary"
                        groups="catalog.group_manager"
                    />
                    <button
                        name="action_open_url"
                        type="object"
                        string="Open"
                        class="btn btn-default"
                        icon="fa-github"
                        attrs="{'invisible': [('url', '=', False)]}"
                    />
                </header> -->
                <sheet>
                    <div class="oe_button_box" name="button_box">

                        <button
                            type="object"
                            class="oe_stat_button"
                            icon="fa-cube"
                            name="action_view_custom_addons"
                            attrs="{'invisible': [('custom_addon_count', '=', False)]}">
                            <div class="o_stat_info">
                                <field name="custom_addon_count" class="o_stat_value"/>
                                <span class="o_stat_text"> Addons</span>
                            </div>
                        </button>

                    </div>
                    <field name="active" invisible="1" />
                    <field name="custom_addon_count" invisible="1"/>
                    <widget
                        name="web_ribbon"
                        title="Archived"
                        bg_color="bg-danger"
                        attrs="{'invisible': [('active', '=', True)]}"
                    />
                    <div class="oe_title">
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group>
                        <group col="2">
                            <field name="user_id" widget="many2one_avatar_user"/>
                            <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                        </group>
                        <group col="2">
                            <field name="create_date" widget="datetime"/>
                            <field name="write_date" widget="datetime"/>
                        </group>
                    </group>
                    <notebook>
                        <page name="addons" string="Addons">
                            <field name="custom_addon_ids"
                                    context="{'selection_id': id}">
                                <tree>
                                    <field name="is_favorite" widget="boolean_favorite" nolabel="1" />
                                    <field name="name" class="oe_highlight"/>
                                    <field name="technical_name"/>
                                    <field name="version_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                                </tree>
                            </field>
                        </page>
                        <page name="note" string="Notes">
                            <field name="note" widget="html" nolabel="1"/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

</odoo>
