<odoo>
  <data>

    <record id="view_custom_addon_form" model="ir.ui.view">
        <field name="name">view.custom.addon.form.inherited</field>
        <field name="model">custom.addon</field>
        <field name="inherit_id" ref="catalog.view_custom_addon_form"/>
        <field name="arch" type="xml">
            <xpath expr="//header" position="inside">
                <button name="action_add_to_selection"
                        type="object"
                        string="Add to selection"/>
            </xpath>
        </field>
    </record>

    <record id="custom_addon_view_kanban" model="ir.ui.view">
        <field name="name">view.custom.addon.kanban.inherited</field>
        <field name="model">custom.addon</field>
        <field name="inherit_id" ref="catalog.custom_addon_view_kanban"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@role='menu']/a[last()]" position="after">
                <a name="action_add_to_selection" type="object" role="menuitem" class="dropdown-item">Add to selection</a>
            </xpath>
        </field>
    </record>    


  </data>
</odoo>