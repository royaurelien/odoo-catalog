<odoo>
  <data>


    <!-- Dashboard views -->

    <record model="ir.ui.view" id="view_dashboard_tree">
      <field name="model">git.organization</field>
      <field name="name">git.organization.tree</field>
      <field name="arch" type="xml">
        <tree js_class="catalog_list_dashboard" sample="0">
          <field name="name"/>
          <field name="service"/>
          <field name="repository_count" optional="show"/>
          <field name="branch_count" optional="show"/>
          <field name="custom_addons_count" optional="show"/>
          <field name="last_sync_date" widget="datetime" optional="show"/>
          <field name="auth_method" optional="hide"/>
          <field name="is_synchronized" widget="toggle_button" options='{"active": "Synchronized", "inactive": "Not synchronized"}' nolabel="1" optional="show"/>
        </tree>
      </field>
    </record>

    <record id="view_dashboard_kanban" model="ir.ui.view">
        <field name="name">git.organization</field>
        <field name="model">git.organization</field>
        <field name="arch" type="xml">
            <kanban js_class="catalog_kanban_dashboard" sample="0" group_create="0" group_delete="0" group_edit="0"
                    quick_create="0" records_draggable="0"
                    class="oe_background_grey o_kanban_dashboard o_catalog_kanban">
                <field name="name"/>
                <field name="service"/>
                <field name="icon"/>
                <field name="partner_id"/>
                <field name="last_sync_date"/>
                <field name="url"/>
                <field name="branch_count"/>
                <field name="repository_count"/>
                <field name="branch_count"/>
                <field name="custom_addons_count"/>
                <field name="is_synchronized"/>
                <field name="create_uid"/>
                <field name="message_needaction_counter"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click">
                            <div class="row">
                                <div class="col-2">
                                    <img t-attf-src="#{record.icon.value}" t-att-title="record.name.value" t-att-alt="record.icon.value" class="o_image_40_cover float-left"/>
                                </div>
                                <div class="col-10">
                                    <div class="float-right">
                                        <i t-if="record.is_synchronized.raw_value" class="fa fa-circle-o text-success" aria-label="Synchronized" role="img" title="Synchronized"/>
                                        <i t-else="" class="fa fa-circle-o text-muted" aria-label="Not Synchronized" role="img" title="Not Synchronized"/>
                                    </div>
                                    <div>
                                        <strong><t t-esc="record.name.value"/></strong>
                                    </div>
                                    <div class="text-muted">
                                        <field name="partner_id"/>
                                    </div>
                                </div>
                            </div>

                            <hr class="mt4 mb4"/>
                            <!-- <div class="o_kanban_record_bottom">
                                <div class="oe_kanban_bottom_left w-50">
                                    <div>
                                        <a class="o_project_kanban_box" name="action_view_git_repository" type="object">
                                            <div>
                                                <span class="o_value"><t t-esc="record.repository_count.value"/></span>
                                                <span class="o_label"> Repositories</span>
                                            </div>
                                        </a>
                                    </div><div>
                                        <a class="o_project_kanban_box" name="action_view_git_branch" type="object">
                                            <div>
                                                <span class="o_value"><t t-esc="record.branch_count.value"/></span>
                                                <span class="o_label"> Branches</span>
                                            </div>
                                        </a>
                                    </div><div>
                                        <a class="o_project_kanban_box" name="action_view_custom_addons" type="object">
                                            <div>
                                                <span class="o_value"><t t-esc="record.custom_addons_count.value"/></span>
                                                <span class="o_label"> Addons</span>
                                            </div>
                                        </a>
                                    </div>
                                </div>
                                <div class="oe_kanban_bottom_right">
                                    <div class="float-right mt8">
                                        <div class="text-left text-muted">
                                            <t t-esc="record.url.value"/>
                                        </div>
                                        <div t-if="record.last_sync_date.value" class="text-left text-muted">
                                            <i class="fa fa-clock-o" role="img" aria-label="Date" title="Date"></i>
                                            <t t-esc="record.last_sync_date.value" t-options='{"hide_seconds": True}'/>
                                        </div>
                                        <div t-else="" class="text-left text-warning">
                                            <i class="fa fa-clock-o text-warning" role="img" aria-label="Date" title="Date"></i>
                                            Nerver Synchronized
                                        </div>
                                     </div>
                                </div>
                            </div>                             -->
                            <div class="row">
                                <div class="col-6">
                                    <div class="o_project_kanban_boxes">
                                        <a class="o_project_kanban_box" name="action_view_git_repository" type="object">
                                            <div>
                                                <span class="o_value"><t t-esc="record.repository_count.value"/></span>
                                                <span class="o_label"> Repositories</span>
                                            </div>
                                        </a>
                                        <a class="o_project_kanban_box" name="action_view_git_branch" type="object">
                                            <div>
                                                <span class="o_value"><t t-esc="record.branch_count.value"/></span>
                                                <span class="o_label"> Branches</span>
                                            </div>
                                        </a>
                                        <a class="o_project_kanban_box" name="action_view_custom_addons" type="object">
                                            <div>
                                                <span class="o_value"><t t-esc="record.custom_addons_count.value"/></span>
                                                <span class="o_label"> Addons</span>
                                            </div>
                                        </a>
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div class="float-right mt8">
                                        <div class="text-left text-muted">
                                            <t t-esc="record.url.value"/>
                                        </div>
                                        <div t-if="record.last_sync_date.value" class="text-left text-muted">
                                            <i class="fa fa-clock-o" role="img" aria-label="Date" title="Date"></i>
                                            <t t-esc="record.last_sync_date.value" t-options='{"hide_seconds": True}'/>
                                        </div>
                                        <div t-else="" class="text-left text-warning">
                                            <i class="fa fa-clock-o text-warning" role="img" aria-label="Date" title="Date"></i>
                                            Nerver Synchronized
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

  </data>
</odoo>