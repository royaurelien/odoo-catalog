<?xml version="1.0" encoding="UTF-8"?>
<templates>
    <!-- This template is for a table at the top of purchase views that shows some KPIs. -->
    <t t-name="catalog.CatalogDashboard">
        <div class="o_catalog_dashboard container">
            <div class="row">
                <div class="col-sm-6">
                <!-- <h3>KPI</h3> -->
                <table class="table table-sm">
                    <!-- thead needed to avoid list view rendering error for some reason -->
                    <thead>
                        <tr>
                        <!-- can't use th tag due to list rendering error when no values in list... -->
                            <td class="o_text">
                                <div class="o_highlight">KPI</div>
                            </td>
                            <td class="o_text">
                                <div class="o_title">Organizations</div>
                            </td>
                            <td class="o_text">
                                <div class="o_title">Repositories</div>
                            </td>
                            <td class="o_text">
                                <div class="o_title">Branches</div>
                            </td>
                            <td class="o_text">
                                <div class="o_title">Addons</div>
                            </td>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td class="o_text">
                                <div>Total</div>
                            </td>
                            <td class="o_main o_dashboard_action" title="All Organizations" name="catalog_dashboard.catalog_git_organization_action_dashboard" context='{}'>
                                <a href="#">
                                    <span class="o_highlight">
                                        <t t-esc="values['all_organizations']"/>
                                    </span>
                                </a>
                            </td>
                            <td class="o_main" title="All Repositories">
                                <a href="#">
                                    <span class="o_highlight">
                                        <t t-esc="values['all_repositories']"/>
                                    </span>
                                </a>
                            </td>
                            <td class="o_main" title="All Branches">
                                <a href="#">
                                    <span class="o_highlight">
                                        <t t-esc="values['all_branches']"/>
                                    </span>
                                </a>
                            </td>
                            <td class="o_main o_dashboard_action" title="All Addons" name="catalog_dashboard.catalog_action_dashboard" context='{}'>
                                <a href="#">
                                    <span class="o_highlight">
                                        <t t-esc="values['all_addons']"/>
                                    </span>
                                </a>
                            </td>
                        </tr>
                        <tr>
                            <td class="o_text">
                                <div>Sync</div>
                            </td>
                            <td class="o_main o_dashboard_action" title="My Draft RFQs" name="catalog_dashboard.catalog_git_organization_action_dashboard" context='{"search_default_synchronized": true}'>
                                <a href="#"><t t-esc="values['today_sync_organizations']"/></a>
                            </td>
                            <td class="o_main" title="My Draft RFQs">
                                <a href="#"><t t-esc="values['today_sync_repositories']"/></a>
                            </td>
                            <td class="o_main" title="My Waiting RFQs">
                                <a href="#"><t t-esc="values['today_sync_branches']"/></a>
                            </td>
                            <td class="o_main" title="My Late RFQs">
                                <a href="#"><t t-esc="values['today_sync_addons']"/>%</a>
                            </td>
                        </tr>
                        <tr>
                            <td class="o_text">
                                <div>Created</div>
                            </td>
                            <td t-att-class="(values['today_created_organization'] ? 'o_warning' : 'o_main') + ' o_dashboard_action'" title="Created Today" name="catalog_dashboard.catalog_git_organization_action_dashboard" context='{"search_default_created_today": true}'>
                                <a href="#"><t t-esc="values['today_created_organization']"/></a>
                            </td>
                            <td t-att-class="(values['today_created_repository'] ? 'o_warning' : 'o_main')" title="My Draft RFQs">
                                <a href="#"><t t-esc="values['today_created_repository']"/></a>
                            </td>
                            <td t-att-class="(values['today_created_branches'] ? 'o_warning' : 'o_main')" title="My Waiting RFQs">
                                <a href="#"><t t-esc="values['today_created_branches']"/></a>
                            </td>
                            <td t-att-class="(values['today_created_addons'] ? 'o_warning' : 'o_main') + ' o_dashboard_action'" title="Created Today" name="catalog_dashboard.catalog_action_dashboard" context='{"search_default_created_today": true}'>
                                <a href="#"><t t-esc="values['today_created_addons']"/></a>
                            </td>
                        </tr>
                    </tbody>
                </table></div>

                <div class="col-sm-6">
                    <!-- <h3>Help</h3> -->
                    <p>About Catalog</p>
                    <!-- <p>How to use the catalog</p> -->
                    <!-- thead needed to avoid list view rendering error for some reason -->
                    <!-- can't use th tag due to list rendering error when no values in list... -->
