<?xml version="1.0" encoding="utf-8" ?>

<odoo>
    <record id="view_custom_addon_search" model="ir.ui.view">
        <field name="model">custom.addon</field>
        <field name="arch" type="xml">
            <search>
                <field
                    name="name"
                    string="Name or technical name"
                    filter_domain="['|', ('name', 'ilike', self), ('technical_name', 'ilike', self)]"
                />
                <field
                    name="summary"
                    string="Summary or description"
                    filter_domain="['|', ('summary', 'ilike', self), ('description', 'ilike', self)]"
                />
                <field
                    name="branch_ids"
                    string="Branch"
                    filter_domain="[('branch_ids', 'ilike', self)]"
                />
                <field
                    name="tag_ids"
                    string="Tag"
                    filter_domain="[('tag_ids', 'ilike', self)]"
                />
                <field name="category_id" />
                <group expand="1" string="Group By">
                    <filter
                        string="Author"
                        name="author"
                        context="{'group_by' : 'author'}"
                    />
                    <filter
                        string="Category"
                        name="category"
                        context="{'group_by' : 'category_id'}"
                    />
                    <filter
                        string="Partner"
                        name="partner"
                        context="{'group_by' : 'partner_id'}"
                    />
                    <filter
                        string="User"
                        name="user"
                        context="{'group_by' : 'user_id'}"
                    />
                    <filter
                        string="Application"
                        name="user"
                        context="{'group_by' : 'application'}"
                    />
                </group>
                <separator/>
                <filter name="my_favorites" string="My Favorites" domain="[('favorite_user_ids', 'in', uid)]"/>
                <separator/>
                <filter name="applications" string="Applications" domain="[['application', '=', True]]"/>
                <filter name="depends" string="Depends" domain="[['depends', '!=', False]]"/>
                <filter name="is_many_used" string="Many Used" domain="[['is_many_used', '=', True]]"/>
                <filter name="officials" string="Officials" domain='["|", ["author", "=", "Odoo S.A."], ["author", "=", "Odoo"]]'/>
                <separator/>
                <filter string="Archived" domain="[('active', '=', False)]" name="archived"/>
                <separator/>
                <filter name="created_today" string="Created Today" domain="[('create_date', '>=', context_today().strftime('%Y-%m-%d'))]" />
                <filter name="updated_today" string="Updated Today" domain="[('write_date', '>=', context_today().strftime('%Y-%m-%d'))]" />
                <searchpanel>
                    <field name="category_id" string="Categories" enable_counters="1"/>
                    <field name="partner_id" select="multi" string="Partners" icon="fa-users" enable_counters="1"/>
                    <field name="tag_ids" select="multi" icon="fa-tag" enable_counters="1"/>
                </searchpanel>
            </search>
        </field>
    </record>

    <record id="view_custom_addon_tree" model="ir.ui.view">
        <field name="model">custom.addon</field>
        <field name="arch" type="xml">
            <tree create="0" decoration-muted="branch_count == 0">
                <field name="is_favorite" widget="boolean_favorite" nolabel="1" force_save="1"/>
                <field name="name" />
                <field name="technical_name" />
                <field name="category_id" optional="false"/>
                <field name="author" optional="show"/>
                <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}" optional="hide"/>
                <field name="version_ids" widget="many2many_tags" options="{'color_field': 'color'}" optional="show"/>
                <field name="branch_ids" widget="many2many_tags" optional="hide"/>
                <field name="branch_count" string="# Branches" optional="show"/>
                <field name="repository_count" string="# Repository" optional="show"/>
                <field name="is_many_used" string="Many used" optional="show"/>
                <field name="last_sync_date" widget="datetime" optional="hide"/>
            </tree>
        </field>
    </record>

    <record id="view_custom_addon_form" model="ir.ui.view">
        <field name="model">custom.addon</field>
        <field name="arch" type="xml">
            <form create="0" duplicate="0">
                <header>
                </header>
                <sheet>

                    <div class="oe_button_box" name="button_box">
                        <button
                            type="object"
                            class="oe_stat_button"
                            icon="fa-code-fork"
                            name="action_view_git_branch"
                            attrs="{'invisible': [('branch_count', '=', False)]}">
                            <div class="o_stat_info">
                                <field name="branch_count" class="o_stat_value"/>
                                <span class="o_stat_text" attrs="{'invisible': [('branch_count', '&lt;', 2)]}"> Branches</span>
                                <span class="o_stat_text" attrs="{'invisible': [('branch_count', '&gt;', 1)]}"> Branch</span>
                            </div>
                        </button>

                        <button
                            type="object"
                            class="oe_stat_button"
                            icon="fa-folder-o"
                            name="action_view_git_repository"
                            attrs="{'invisible': [('repository_count', '=', False)]}">
                            <div class="o_stat_info">
                                <field name="repository_count" class="o_stat_value"/>
                                <span class="o_stat_text"> Repository</span>
                            </div>
                        </button>

                    </div>
                    <field name="icon_image" widget="image" class="oe_avatar" readonly="1"/>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                        <h3 class="oe_fade">
                            <span>
                                <field name="is_favorite" widget="boolean_favorite" nolabel="1" class="oe_inline"/>
                            </span>
                            <span> - </span>
                            <field name="technical_name" class="oe_inline" readonly="1"/>
                        </h3>
                    </div>
                    <field name="branch_count" invisible="1"/>
                    <field name="repository_count" invisible="1"/>
                    <group>
                        <group col="2">
                            <field name="summary" readonly="1"/>
                            <field name="description" readonly="1"/>
                            <field name="url" widget="url" readonly="1"/>
                            <field name="category_id" readonly="1"/>
                            <field name="category" groups="base.group_no_one"/>
                            <field name="application" readonly="1"/>
                            <field name="depends" readonly="1"/>
                        </group>
                        <group col="2">
                            <field name="last_sync_date" widget="datetime"/>
                            <field name="author" readonly="1"/>
                            <field name="partner_id"/>
                            <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                            <field name="version_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                            <field name="version" readonly="1" groups="base.group_no_one"/>
                            <field name="origin" groups="base.group_no_one"/>
                        </group>
                    </group>
                    <notebook>
                        <page name="description" string="Description">
                            <field name="web_description" nolabel="1" readonly="1" widget="html"/>
                        </page>
                        <page name="note" string="Notes">
                            <field name="note" widget="html" nolabel="1"/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="custom_addon_view_kanban" model="ir.ui.view">
        <field name="name">Custom Addons Kanban</field>
        <field name="model">custom.addon</field>
        <field name="arch" type="xml">
            <kanban group_create="0" group_delete="0" group_edit="0"
                    quick_create="0" records_draggable="0" sample="0"
                    create="false" class="o_modules_kanban">
                <field name="id"/>
                <field name="icon"/>
                <field name="icon_image"/>
                <field name="name"/>
                <field name="technical_name"/>
                <field name="author"/>
                <field name="color"/>
                <field name="url"/>
                <field name="is_many_used"/>
                <field name="version_ids"/>
                <field name="branch_ids"/>
                <field name="branch_count"/>
                <field name="repository_count"/>
                <field name="tag_ids"/>
                <field name="category_id"/>
                <field name="summary"/>
                <field name="is_favorite"/>
                <field name="message_needaction_counter"/>

                <templates>
                    <t t-name="kanban-box">
                      <div class="oe_module_vignette oe_kanban_global_click">
                        <t t-set="installed" t-value="False"/>
                        <div class="o_dropdown_kanban dropdown" tabindex="-1">
                            <a class="dropdown-toggle o-no-caret btn" data-toggle="dropdown" data-display="static" href="#" role="button" aria-label="Dropdown menu" title="Dropdown menu">
                                <span class="fa fa-ellipsis-v"/>
                            </a>
                            <div class="dropdown-menu" role="menu" aria-labelledby="dLabel">
                                <a name="action_view_git_branch" type="object" role="menuitem" class="dropdown-item">View branches</a>
                                <a name="action_view_git_repository" type="object" role="menuitem" class="dropdown-item">View repositories</a>
                            </div>
                        </div>
                        <img t-if="record.icon_image.raw_value" t-att-src="kanban_image('custom.addon', 'icon_image', record.id.raw_value)"  class="oe_module_icon" alt="Icon"/>
                        <img t-else="" src="/base/static/description/icon.png" class="oe_module_icon" alt="Icon"/>
                        <div class="oe_module_desc" t-att-title="record.name.value">
                          <h4 class="o_kanban_record_title">
                            <field name="name"/>&amp;nbsp;
                          </h4>
                          <p class="oe_module_name">
                            <code><field name="technical_name"/></code>
                          </p>
                          <div class="oe_module_action">
                            <div class="text-muted float-right">
                                <field name="version_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                            </div>
                          </div>
                        </div>
                      </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>


</odoo>
