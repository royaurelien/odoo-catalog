<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="view_catalog_template_tree" model="ir.ui.view">
        <field name="name">catalog.template.common.tree</field>
        <field name="model">catalog.template</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="branch" />
            </tree>
        </field>
    </record>

    <record id="view_catalog_template_form" model="ir.ui.view">
        <field name="name">catalog.template.common.form</field>
        <field name="model">catalog.template</field>
        <field name="arch" type="xml">
            <form>
                <header>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                    </div>
                    <!-- <field name="icon_image" widget="image" class="oe_avatar" readonly="1"/> -->
                    <div class="oe_title">
                        <h1>
                            <field name="name"/>
                        </h1>
                        <h3>
                            <field name="technical_name"/>
                        </h3>
                    </div>
                    <group>
                        <group col="2">
                            <field name="branch"/>
                            <field name="entry_variant_id" string="Main Entry"/>
                        </group>
                        <group col="2">
                            <field name="create_date" widget="datetime"/>
                            <field name="write_date" widget="datetime"/>
                            <field name="create_uid" widget="many2many_avatar"/>
                        </group>
                    </group>
                    <notebook>
                        <page name="entries" string="Entries">
                            <!-- <field name="web_description" nolabel="1" readonly="1" widget="html"/> -->
                            <field name="entry_variant_ids" nolabel="1"/>
                        </page>
                        <page name="manifest" string="Manifest">
                            <field name="manifest" nolabel="1" widget="code" options="{'mode': 'python'}"/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

</odoo>
