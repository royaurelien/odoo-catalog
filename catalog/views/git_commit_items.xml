<?xml version="1.0" encoding="utf-8" ?>

<odoo>

    <record id="view_git_commit_items_tree" model="ir.ui.view">
        <field name="model">git.commit.items</field>
        <field name="arch" type="xml">
            <tree create="0" delete="0">
                <field name="commit_date" widget="datetime" optional="show"/>
                <field name="branch_id" optional="hide"/>
                <field name="repository_id" optional="hide"/>
                <field name="commit_id" optional="hide"/>
                <field name="name"/>
                <field name="author"/>
                <field name="email" optional="show"/>
                <field name="stats" optional="hide"/>
                <field name="commit_url" optional="hide"/>
                <button name="action_open_url" type="object" icon="fa-external-link"/>
            </tree>
        </field>
    </record>

    <record id="view_git_commit_items_form" model="ir.ui.view">
        <field name="model">git.commit.items</field>
        <field name="arch" type="xml">
            <form create="0" edit="0" duplicate="0">
                <header>
                    <button
                        name="action_open_url"
                        type="object"
                        string="Open"
                        class="btn btn-default"
                        icon="fa-github"
                        attrs="{'invisible': [('commit_url', '=', False)]}"
                    />
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                        <h3 class="oe_fade">
                            <field name="repository_id" readonly="1" class="oe_inline" />
                            <field name="branch_id" readonly="1" class="oe_inline" />
                        </h3>
                    </div>
                    <group>
                        <group>
                            <field name="author" readonly="1"/>
                            <field name="email" readonly="1"/>
                            <field name="stats" readonly="1"/>
                        </group>
                        <group>
                            <field name="commit_date" widget="datetime" readonly="1"/>
                            <field name="commit_id" readonly="1"/>
                            <field name="commit_url" groups="base.group_no_one"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>


</odoo>
