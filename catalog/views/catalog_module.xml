<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_catalog_module_search" model="ir.ui.view">
        <field name="name">catalog.module.search</field>
        <field name="model">catalog.module</field>
        <field name="arch" type="xml">
            <search>
                <field
                    name="name"
                    string="Name or technical name"
                    filter_domain="['|', ('name', 'ilike', self), ('technical_name', 'ilike', self)]"
                />
                <!-- <field
                    name="summary"
                    string="Summary or description"
                    filter_domain="['|', ('summary', 'ilike', self), ('description', 'ilike', self)]"
                /> -->
                <!-- <field
                    name="branch_id"
                    string="Branch"
                    filter_domain="[('branch_id', 'ilike', self)]"
                /> -->
                <!-- <field
                    name="author_ids"
                    string="Authors"
                    filter_domain="[('author_ids', 'ilike', self)]"
                /> -->
                <!-- <field name="category"/> -->
                <filter string="My Favorites" name="my_favorites_filter" domain="[('favorite_user_ids', 'in', uid)]"/>
                <group expand="1" string="Group By">
                    <!-- <filter
                        string="Branch"
                        name="branch"
                        context="{'group_by' : 'branch_id'}"
                    /> -->
                    <!-- <filter
                        string="Repository"
                        name="repository"
                        context="{'group_by' : 'repository_id'}"
                    /> -->
                    <!-- <filter
                        string="Category"
                        name="category"
                        context="{'group_by' : 'category'}"
                    /> -->
                </group>
                <separator/>
                <!-- <filter name="my_favorites" string="My Favorites" domain="[('favorite_user_ids', 'in', uid)]"/> -->
                <separator/>
                <!-- <filter name="applications" string="Applications" domain="[['application', '=', True]]"/> -->
                <!-- <filter name="depends" string="Depends" domain="[['depends', '!=', False]]"/> -->

                <!-- <filter name="officials" string="Officials" domain='["|", ["author", "=", "Odoo S.A."], ["author", "=", "Odoo"]]'/> -->
                <separator/>
                <filter string="Archived" domain="[('active', '=', False)]" name="archived"/>
                <separator/>
                <filter name="created_today" string="Created Today" domain="[('create_date', '>=', context_today().strftime('%Y-%m-%d'))]" />
                <filter name="updated_today" string="Updated Today" domain="[('write_date', '>=', context_today().strftime('%Y-%m-%d'))]" />
                <searchpanel>
                    <!-- <field name="repository_id" string="Repository" enable_counters="1"/> -->
                    <!-- <field name="partner_id" select="multi" string="Partners" icon="fa-users" enable_counters="1"/> -->
                    <field name="version_ids" select="multi" icon="fa-tag" enable_counters="1"/>
                </searchpanel>
            </search>
        </field>
    </record>

    <record id="view_catalog_module_tree" model="ir.ui.view">
        <field name="name">catalog.module.common.tree</field>
        <field name="model">catalog.module</field>
        <field name="arch" type="xml">
            <tree create="0" delete="1">
                <field name="name" />
                <field name="path" optional="hide"/>
                <field
                    name="version_ids"
                    widget="many2many_tags"
                    options="{'color_field': 'color', 'no_create_edit': True}"
                    optional="show"
                />
                <field name="version_id" optional="hide"/>
                <field name="entry_count"/>
                <button
                    name="action_view_entries"
                    type="object"
                    icon="fa-folder-open"
                    title="View entries"
                    aria-label="View entries"
                />
            </tree>
        </field>
    </record>

    <record id="view_catalog_module_form" model="ir.ui.view">
        <field name="name">catalog.module.common.form</field>
        <field name="model">catalog.module</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button
                        name="action_add_to_selection"
                        type="object"
                        string="Add to selection"
                    />
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button
                            class="oe_stat_button"
                            type="object"
                            name="action_view_entries"
                            icon="fa-users"
                        >
                            <field string="Entries" name="entry_count" widget="statinfo"/>
                        </button>
                        <button
                            class="oe_stat_button"
                            type="object"
                            name="action_view_selections"
                            icon="fa-folder"
                            invisible="not selection_count"
                        >
                            <field string="Selections" name="selection_count" widget="statinfo"/>
                        </button>
                    </div>
                    <field name="icon_image" widget="image" class="oe_avatar" readonly="1"/>
                    <div class="oe_title">
                        <h1 class="d-flex flex-row">
                            <field name="is_favorite" nolabel="1" widget="boolean_favorite" class="me-2"/>
                            <field name="name" options="{'line_breaks': False}" widget="text" class="o_text_overflow"/>
                        </h1>
                        <h3>
                            <field name="technical_name"/>
                        </h3>
                    </div>
                    <separator/>
                    <group>
                        <group col="2">
                            <field name="entry_id" string="Main Entry"/>
                        </group>
                        <group col="2">
                            <field name="path"/>
                        </group>
                    </group>
                    <notebook>
                        <page name="description" string="Description">
                            <field name="web_description" nolabel="1" widget="html"/>
                        </page>
                        <page name="entries" string="Entries">
                            <field name="entry_ids" nolabel="1"/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="view_catalog_module_kanban" model="ir.ui.view">
        <field name="name">catalog.module.kanban</field>
        <field name="model">catalog.module</field>
        <field name="arch" type="xml">
            <kanban group_create="0" group_delete="0" group_edit="0"
                    quick_create="0" records_draggable="0" sample="0"
                    create="false" class="o_modules_kanban">
                <field name="id"/>
                <!-- <field name="icon"/> -->
                <field name="icon_image"/>
                <field name="name"/>
                <field name="technical_name"/>
                <!-- <field name="author"/> -->
                <!-- <field name="color"/> -->
                <!-- <field name="url"/> -->
                <!-- <field name="is_many_used"/> -->
                <field name="version_ids"/>
                <field name="favorite_user_ids"/>
                <!-- <field name="branch_ids"/> -->
                <!-- <field name="branch_count"/> -->
                <!-- <field name="repository_count"/> -->
                <!-- <field name="tag_ids"/> -->
                <!-- <field name="category_id"/> -->
                <!-- <field name="summary"/> -->
                <!-- <field name="is_favorite"/> -->
                <!-- <field name="message_needaction_counter"/> -->

                <templates>
                    <t t-name="kanban-box">
                      <div class="oe_module_vignette oe_kanban_global_click">
                        <t t-set="installed" t-value="False"/>
                        <div class="o_dropdown_kanban dropdown" tabindex="-1">
                            <a class="dropdown-toggle o-no-caret btn" data-toggle="dropdown" data-display="static" href="#" role="button" aria-label="Dropdown menu" title="Dropdown menu">
                                <span class="fa fa-ellipsis-v"/>
                            </a>
                            <div class="dropdown-menu" role="menu" aria-labelledby="dLabel">
                                <a name="action_view_branches" type="object" role="menuitem" class="dropdown-item">View branches</a>
                                <a name="action_view_repositories" type="object" role="menuitem" class="dropdown-item">View repositories</a>
                            </div>
                        </div>
                        <img t-if="record.icon_image.raw_value" t-att-src="kanban_image('catalog.module', 'icon_image', record.id.raw_value)"  class="oe_module_icon" alt="Icon"/>
                        <img t-else="" src="/base/static/description/icon.png" class="oe_module_icon" alt="Icon"/>
                        <div class="oe_module_desc" t-att-title="record.name.value">
                          <h4 class="o_kanban_record_title">
                            <field name="name"/>&amp;nbsp;
                          </h4>
                          <p class="oe_module_name">
                            <code><field name="technical_name"/></code>
                          </p>
                          <div class="oe_module_action">
                            <div class="text-muted float-right">
                                <field name="version_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                            </div>
                          </div>
                        </div>
                      </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

</odoo>
