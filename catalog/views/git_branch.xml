<?xml version="1.0" encoding="utf-8" ?>

<odoo>
    <record id="view_git_branch_search" model="ir.ui.view">
        <field name="model">git.branch</field>
        <field name="arch" type="xml">
            <search>
                <field
                    name="name"
                    string="Name or Repository"
                    filter_domain="['|', ('name', 'ilike', self), ('repository_id', 'ilike', self)]"
                />
                <field name="repository_id" />
                <field name="organization_id" />

                <group expand="1" string="Group By">
                    <filter
                        string="Organization"
                        name="organization"
                        context="{'group_by' : 'organization_id'}"
                    />
                    <filter
                        string="Repository"
                        name="repository"
                        context="{'group_by' : 'repository_id'}"
                    />
                    <filter
                        string="Service"
                        name="service"
                        context="{'group_by' : 'service'}"
                    />
                    <filter
                        string="Partner"
                        name="partner"
                        context="{'group_by' : 'partner_id'}"
                    />
                    <filter
                        string="User"
                        name="user"
                        context="{'group_by' : 'user_id'}"
                    />
                    <separator/>
                    <!-- <filter
                        string="Repository create date"
                        name="repository_create_date"
                        context="{'group_by': 'repository_create_date'}"/>
                    <filter
                        string="Repository last update"
                        name="repository_update_date"
                        context="{'group_by': 'repository_update_date'}"/> -->
                </group>
                <!-- <filter name="branches" string="Branches" domain="[['branch_count','&lt;',1]]"/> -->
                <separator/>
                <filter name="major" string="Major Version" domain="[['major','=',True]]"/>
                <filter name="recent_activity" string="Recent Activity" domain="[['is_recent_activity','=',True]]"/>
                <filter name="requirements" string="Requirements" domain="[['requirements','=',True]]"/>
                <filter name="synchronized" string="Synchronized" domain="[['is_synchronized','=',True]]"/>
                <separator/>
                <filter name="active" string="Archived" domain="[['active','=',False]]"/>
                <separator/>
                <filter name="created_today" string="Created Today" domain="[('create_date', '>=', context_today().strftime('%Y-%m-%d'))]" />
                <filter name="updated_today" string="Updated Today" domain="[('write_date', '>=', context_today().strftime('%Y-%m-%d'))]" />
            </search>
        </field>
    </record>

    <record id="view_git_branch_tree" model="ir.ui.view">
        <field name="model">git.branch</field>
        <field name="arch" type="xml">
            <tree create="0" decoration-muted="custom_addon_count == 0">
                <field name="name"/>
                <field name="repository_id"/>
                <field name="major" optional="show"/>
                <field name="requirements" optional="show"/>
                <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}" optional="show"/>
                <field name="custom_addon_count" string="# Addons" sum="Sum of # Addons" optional="show"/>
                <field name="is_recent_activity" optional="hide"/>
                <field name="last_commit" optional="hide"/>
                <field name="last_commit_date" widget="datetime" optional="hide"/>
                <field name="last_sync_date" widget="datetime" optional="hide"/>
                <field name="is_synchronized" widget="toggle_button" options='{"active": "Synchronized", "inactive": "Not synchronized"}' nolabel="1" optional="show"/>
            </tree>
        </field>
    </record>

    <record id="view_git_branch_form" model="ir.ui.view">
        <field name="model">git.branch</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button
                        name="action_sync"
                        type="object"
                        string="Addons Sync."
                        class="btn btn-primary"
                        groups="catalog.group_developper"
                    />
                    <button
                        name="action_open_url"
                        type="object"
                        string="Open"
                        class="btn btn-default"
                        icon="fa-github"
                        attrs="{'invisible': [('url', '=', False)]}"
                    />
                    <button
                        name="action_update_commits"
                        type="object"
                        string="Fetch Commits"
                        class="btn btn-default"
                    />
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button
                            type="object"
                            class="oe_stat_button"
                            icon="fa-code"
                            name="action_view_commits">
                            <div class="o_stat_info">
                                <field name="commit_count" class="o_stat_value"/>
                                <span class="o_stat_text"> Commits</span>
                            </div>
                        </button>
                        <button
                            type="object"
                            class="oe_stat_button"
                            icon="fa-cube"
                            name="action_view_custom_addons"
                            attrs="{'invisible': [('custom_addon_count', '=', False)]}">
                            <div class="o_stat_info">
                                <field name="custom_addon_count" class="o_stat_value"/>
                                <span class="o_stat_text"> Addons</span>
                            </div>
                        </button>
                    </div>
                    <field name="active" invisible="1" />
                    <field name="custom_addon_count" invisible="1"/>
                    <field name="url" invisible="1"/>
                    <widget
                        name="web_ribbon"
                        title="Archived"
                        bg_color="bg-danger"
                        attrs="{'invisible': [('active', '=', True)]}"
                    />
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                        <h3 class="oe_fade">
                            <field name="repository_id" readonly="1" class="oe_inline" /> from <field name="organization_id" class="oe_inline"/>
                        </h3>
                    </div>
                    <group>
                        <group col="2" string="Technical">
                            <field name="requirements" readonly="1"/>
                            <field name="python_modules" readonly="1"/>
                            <!-- <field name="last_commit" groups="base.group_no_one"/> -->
                        </group>
                        <group col="2">
                            <field name="last_sync_date" widget="datetime"/>
                            <field name="partner_id"/>
                            <field name="user_id"/>
                            <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                        </group>
                    </group>
                    <notebook>
                        <page name="addons" string="Addons">
                            <field name="custom_addon_ids"
                                    widget="section_and_note_one2many"
                                    mode="tree"
                                    context="{'branch_id': id}">
                                <tree editable="false">
                                    <field name="is_favorite" widget="boolean_favorite" nolabel="1" />
                                    <field name="name" class="oe_highlight"/>
                                    <field name="technical_name"/>
                                    <field name="category_id"/>
                                    <field name="is_many_used"/>
                                    <field name="url" widget="url"/>
                                    <button name="action_open_url" type="object" icon="fa-external-link"/>
                                </tree>
                            </field>
                        </page>

                        <page name="info" string="Informations">
                        <group>
                            <group name="commits" string="Last commit">
                                <field name="last_commit_date" string="Date" widget="datetime" readonly="1" />
                                <field name="last_commit_message" string="Message" readonly="1"/>
                                <field name="last_commit_author" string="Author" readonly="1"/>
                                <field name="last_commit_url" string="Url" widget="url" readonly="1"/>
                                <field name="last_commit_short_id" string="ID" readonly="1" groups="base.group_no_one"/>
                            </group>
                            <group name="branch" string="Branch">
                                <field name="is_synchronized" widget="boolean_toggle" options='{"active": "Synchronized", "inactive": "Not synchronized"}'/>
                                <field name="git_clone_command" widget="CopyClipboardChar" readonly="1" groups="catalog.group_developper"/>
                                <field name="service" groups="base.group_no_one"/>
                                <field name="url" widget="url" readonly="1" groups="base.group_no_one"/>
                            </group>
                        </group>
                        </page>
                        <page name="note" string="Notes">
                            <field name="note" widget="html" nolabel="1"/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="view_git_branch_kanban" model="ir.ui.view">
        <field name="name">Git Branch</field>
        <field name="model">git.branch</field>
        <field name="arch" type="xml">
            <kanban group_create="0" group_delete="0" group_edit="0"
                    quick_create="0" records_draggable="0" sample="0"
                    create="0"
                    class="oe_background_grey o_kanban_dashboard o_emphasize_colors">
            <field name="name"/>
            <field name="repository_id"/>
            <field name="partner_id"/>
            <field name="tag_ids"/>
            <field name="custom_addon_count"/>
            <field name="is_synchronized"/>
            <field name="message_needaction_counter"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click o_has_icon">
                            <div class="o_project_kanban_main">
                                <div class="o_kanban_card_content">
                                    <div class="o_kanban_primary_left">
                                        <div class="o_primary">
                                            <span><t t-esc="record.name.value"/></span>
                                            <span t-if="record.repository_id.value">
                                                from <strong><t t-esc="record.repository_id.value"/></strong>
                                            </span>
                                        </div>
                                        <div>
                                            <span><field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"/></span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="o_project_kanban_boxes">
                                <a class="o_project_kanban_box" name="action_view_custom_addons" type="object">
                                    <div>
                                        <span class="o_value"><t t-esc="record.custom_addon_count.value"/></span>
                                        <span class="o_label"> Addons</span>
                                    </div>
                                </a>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

</odoo>
