<?xml version="1.0" encoding="utf-8" ?>

<odoo>

    <record id="view_git_contributor_tree" model="ir.ui.view">
        <field name="model">git.contributor</field>
        <field name="arch" type="xml">
            <tree create="0" delete="0">
                <field name="name"/>
                <field name="email"/>
            </tree>
        </field>
    </record>

    <record id="view_git_contributor_form" model="ir.ui.view">
        <field name="model">git.contributor</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                        <h3 class="oe_fade">
                            <field name="email" readonly="1" class="oe_inline" />
                        </h3>
                    </div>
                    <group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>


</odoo>
