<odoo>
  <data>

    <record id="view_git_organization_form" model="ir.ui.view">
        <field name="name">view.git.organization.form.inherited</field>
        <field name="model">git.organization</field>
        <field name="inherit_id" ref="catalog.view_git_organization_form"/>
        <field name="arch" type="xml">
            <xpath expr="//header" position="inside">
                <button name="action_create_repository"
                        type="object"
                        attrs="{'invisible': [('allow_repository_create', '=', False)]}"
                        groups="catalog.group_developper"
                        string="Create Repository"/>
                <button name="action_update_repository"
                        type="object"
                        groups="catalog.group_developper"
                        string="Update"/>
            </xpath>
            <xpath expr="//page[@name='settings']" position="after">
              <page name="developper" string="Developper Settings" groups="catalog.group_developper">
                <group>
                  <group string="Settings">
                      <field name="allow_repository_create" widget="boolean_toggle"/>
                      <field name="allow_branch_create" widget="boolean_toggle"/>
                      <field name="namespace_ids" widget="many2many_tags"/>
                  </group>
                  <group string="Workflow">
                      <field name="default_namespace_id" domain="[('organization_id', '=', id)]"
                        string="Default namespace (ID)" attrs="{'required': [('allow_branch_create', '=', True)]}"
                        options="{'no_create': True}"/>
                      <field name="workflow" string="Workflow" attrs="{'required': [('allow_branch_create', '=', True)]}"/>
                      <field name="default_visibility" string="Default visibility" attrs="{'required': [('allow_repository_create', '=', True)]}"/>
                  </group>
                </group>
              </page>
            </xpath>
        </field>
    </record>

  </data>
</odoo>