<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="create_repository_view_form" model="ir.ui.view">
        <field name="name">catalog.create.repository.form</field>
        <field name="model">catalog.create.repository</field>
        <field name="arch" type="xml">
            <form string="Add to selection">
                <group>
                    <group>
                        <field name="organization_id" string="Organization"/>
                        <field name="name" string="Name" required="1"/>
                        <field name="path" string="Path"/>
                        <field name="namespace_id" string="Namespace"/>
                        <field name="description" string="Description"/>
                    </group>
                    <group>
                        <field name="visibility" string="Visibility"/>
                        <field name="branch_create" widget="boolean_toggle" string="Create branch"/>
                        <field name="second_branch_create" widget="boolean_toggle" string="Create second branch"/>
                        <field name="odoo_version" string="Odoo"/>
                        <field name="branch_name" string="Branch name"/>
                        <field name="second_branch_name" string="Second Branch name"/>
                    </group>
                </group>
                <footer>
                    <button name="validate" type="object" string="Validate" class="btn-primary"
                        attrs="{'invisible': [('organization_id', '=', False)]}"/>
                    <button string="Discard" special="cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

</odoo>
