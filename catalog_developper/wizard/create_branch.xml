<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="create_branch_view_form" model="ir.ui.view">
        <field name="name">catalog.create.branch.form</field>
        <field name="model">catalog.create.branch</field>
        <field name="arch" type="xml">
            <form string="Add to selection">
                <group>
                    <group>
                        <field name="organization_id" options="{'no_create': True}"/>
                        <field name="repository_id" options="{'no_create': True}"/>
                        <field name="namespace_id" options="{'no_create': True}" readonly="1"/>
                    </group>
                    <group>
                        <field name="name" string="Name" required="1"/>
                        <field name="branch_id" string="From"  required="1"
                            domain="[('repository_id', '=', repository_id)]"
                            options="{'no_create': True}"/>

                    </group>
                </group>
                <footer>
                    <button name="validate" type="object" string="Validate" class="btn-primary"
                        attrs="{'invisible': [('branch_id', '=', False)]}"/>
                    <button string="Discard" special="cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

</odoo>
