<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="webhook_event_message">
        <h4>
            <t t-if="event" t-esc="event.name"/>
            <t t-else="" t-esc="values['object']"/>
        </h4>
        <h5 class="text-muted">Repository <t t-esc="repository.name"/></h5>
        <h6 t-if="values['title']"><t t-esc="values['title']"/></h6>

        <p t-if="values['merge_request']">
            <strong><t t-esc="values['merge_request']['source_branch']"/></strong> to <strong><t t-esc="values['merge_request']['source_branch']"/></strong> (<t t-esc="values['merge_request']['state']"/>)
        </p>

        <p t-if="values['description']">
            <t t-esc="values['description']"/>
        </p>

        <p t-if="values['note']">
            <t t-esc="values['note']"/>
        </p>

        <p t-if="values['url']" class="mr-3 align-middle text-center">
            <a role="button" class="btn btn-primary btn-sm ml-auto" t-attf-href="#{values['url']}">View</a>
        </p>

        <p>
            <ul>
                <li t-if="values['username']">User: <t t-esc="values['username']"/></li>
                <li t-if="values['email']">Email: <t t-esc="values['email']"/></li>
            </ul>
        </p>

        <p class="text-muted">
            <span>Created at: <t t-esc="values['created_at']" t-options="{'widget': 'datetime'}"/></span>
            <span>Updated at: <t t-esc="values['updated_at']" t-options="{'widget': 'datetime'}"/></span>
        </p>
