<?xml version="1.0" encoding="utf-8" ?>

<odoo>

    <record id="view_custom_addon_search" model="ir.ui.view">
        <field name="model">custom.addon</field>
        <field name="inherit_id" ref="catalog.view_custom_addon_search" />
        <field name="arch" type="xml">
            <field name="name" position="replace">
                <!-- <field name="name" operator="%" /> -->
                <!-- <field name="technical_name" operator="%" /> -->
                <field
                    name="name"
                    string="Name or technical name"
                    filter_domain="['|', ('name', '%', self), ('technical_name', '%', self)]"
                />
            </field>
        </field>
    </record>

</odoo>
